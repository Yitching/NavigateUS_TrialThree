<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/orange"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/txt_start"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Starting Location"
        android:padding="12dp" />

    <EditText
        android:id="@+id/et_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_source"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/txt_end"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Destination "
        android:padding="12dp" />

    <Button
        android:id="@+id/bt_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_destination"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@color/orange"
        android:text="Navigate"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/et_source"
        android:layout_alignParentLeft="true"
        android:text="From: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/et_destination"
        android:layout_alignParentLeft="true"
        android:paddingRight="25dp"
        android:text="To: "
        android:textSize="20dp" />

</RelativeLayout>